*/

SELECT D.DB_EDILD_NOMEARQ  AS "ARQ IMPORTADO",
       A.DB_EDIP_LOTE      AS "LOTE MERCANET",
       A.DB_EDIP_PEDMERC   AS "PEDIDO MERCANET",
       C.DB_CLI_CODIGO     AS "COD CLIENTE",
       A.DB_EDIP_COMPRADOR AS "CNPJ CLIENTE",
       C.DB_CLI_NOME       AS "RAZAO SOCIAL",
       E.DB_PRDEMB_PRODUTO AS "COD PRODUTO",
       B.DB_EDII_PRODUTO   AS "EAN PRODUTO",
       B.DB_EDII_QTDE_VDA  AS "QTDE SOLICITADA",
       A.DB_EDIP_PROJETO   AS "CODIGO PROJETO",
       F.DB_LAB_DESCRICAO  AS "FORNECEDOR"
  FROM DB_EDI_PEDIDO     A,
       DB_EDI_PEDPROD    B,
       DB_CLIENTE        C,
       DB_EDI_LOTE_DISTR D,
       DB_PRODUTO_EMBAL  E,
       DB_LABORATORIO    F,
       DB_PEDIDO_PROD    G
 WHERE A.DB_EDIP_NRO = B.DB_EDII_NRO
   AND A.DB_EDIP_COMPRADOR = B.DB_EDII_COMPRADOR
   AND A.DB_EDIP_COMPRADOR = C.DB_CLI_CGCMF
   AND A.DB_EDIP_LOTE = D.DB_EDILD_SEQ
   AND A.DB_EDIP_LABCOD = F.DB_LAB_CODIGO
   AND B.DB_EDII_PRODUTO = E.DB_PRDEMB_CODBARRA
   AND A.DB_EDIP_PEDMERC  = G.DB_PEDI_PEDIDO
   AND G.DB_PEDI_ATD_DATA IS NULL
   AND G.DB_PEDI_ATD_DCTO IS NULL
   AND B.DB_EDII_MOTIVORET = 100
   AND A.DB_EDIP_VAN = 508
   AND A.DB_EDIP_LOTE = 80686

   
 